sample = json("../sprite/sample.json", {hash: true})

&
  width: (layout.width - 30)
  margin: 24px auto
  line-height: 1.5

.title
  font-size: 64px
  font-weight: bold

.sub-title
  font-size: 32px
  font-weight: bold

.social-buttons
  margin: 16px 0

.text
  margin: 16px 0
  text-indent: .5em

.icon-text
  display: inline-block
  sprite(sample.text)
  
.icon-arrow
  display: inline-block
  sprite(sample.arrow)
